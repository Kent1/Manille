<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
            android:key="team1"
            android:title="@string/editTeam1"
            android:defaultValue="@string/valueTeam1"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

    <EditTextPreference
            android:key="team2"
            android:title="@string/editTeam2"
            android:defaultValue="@string/valueTeam2"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

    <EditTextPreference
            android:key="score"
            android:title="@string/editScore"
            android:defaultValue="@string/valueScore"
            android:selectAllOnFocus="true"
